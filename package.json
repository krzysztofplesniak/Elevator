		"express-sse": "^0.5.3"
	},
	"devDependencies": {
		"axios": "^0.19.2",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"concurrently": "^5.2.0",
		"mocha": "^10.2.0",
		"nodemon": "^2.0.3"
	},
	"engines": {
		"node": "12.13.1",
		"npm": "6.12.1"
	},
